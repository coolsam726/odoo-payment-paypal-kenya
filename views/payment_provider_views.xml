<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
<!--        Extend the paypal payment_provider_views -->
        <record id="payment_provider_form_inherit_paypal_kenya" model="ir.ui.view">
            <field name="name">PayPal Kenya Provider Form Inherit</field>
            <field name="model">payment.provider</field>
            <field name="inherit_id" ref="payment_paypal.payment_provider_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='paypal_client_secret']" position="after">
                    <field
                        name="paypal_base_currency_id"
                        required="code == 'paypal' and state != 'disabled'"
                    />
                </xpath>
            </field>
        </record>
    </data>
</odoo>